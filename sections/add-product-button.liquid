<script>
    $(function () {
        let AddToCartForm = document.getElementById('AddToCartForm');
        $(AddToCartForm).on('submit', function (event) { event.preventDefault()});
        $('#ProductForm__AddToCart').click(function (event) { 
            event.preventDefault()
            AddToCartForm.submit();
        });

        $('#ProductForm__Checkout').click(function (event) {
            event.preventDefault();
            $('#action-address').val('/checkout');
            
            deleteCart(function () { AddToCartForm.submit()})
        });
    })


    function deleteCart(fn) {
        $.ajax({
        type: "GET", 
        url: window.Shopify.routes.root + 'cart/clear',
        dataType: "json",
            success: function (response) { 
                fn();
            },
        })
    }
</script>