<script>
    let settingValue = 300;
    let docHeight = 0
    let viewportHeight = window.innerHeight;
    let bottomWrapper = document.getElementById('prodcut-bottom-wrapper_lvl861l');

    function setBottomWrapper (dir) {
        bottomWrapper.style.display = dir
    }

    function pageScroll () {
        document.addEventListener('scroll', throttle(handleScroll, 200));
    }

    
    document.addEventListener('DOMContentLoaded', function() {
        docHeight = document.documentElement.scrollHeight + window.innerHeight;
        pageScroll();
    });

    
    function handleScroll () {
        const scrollValue = window.scrollY || window.pageYOffset ; 
        docHeight = document.documentElement.scrollHeight

        if (scrollValue + viewportHeight >= docHeight) {
            setBottomWrapper('none')
            return;
        }

        if (scrollValue > settingValue ) {
            setBottomWrapper('block')
        } else {
            setBottomWrapper('none')
        }
    }

    function throttle(func, delay, options = { leading: true, trailing: true }) {
        let lastTime = 0;
        let timer = null;

        return function(...args) {
            const now = Date.now();

            if (!lastTime && options.leading === false) {
            lastTime = now;
            }

            const remaining = delay - (now - lastTime);

            if (remaining <= 0 || remaining > delay) {
            if (timer) {
                clearTimeout(timer);
                timer = null;
            }

            lastTime = now;
            func.apply(this, args);
            } else if (!timer && options.trailing !== false) {
            timer = setTimeout(() => {
                lastTime = options.leading === false ? 0 : Date.now();
                timer = null;
                func.apply(this, args);
            }, remaining);
            }
        };
    }
</script>






